@model StudentManagement.Persistence.Model.StudentEntity

<h2>학생 상세</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">이름</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">나이</dt>
        <dd class="col-sm-10">@Model.Age</dd>
        <dt class="col-sm-2">생성일</dt>
        <dd class="col-sm-10">@Model.DateCreated.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">수정일</dt>
        <dd class="col-sm-10">@Model.DateModified.ToString("yyyy-MM-dd")</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">수정</a>
    <a asp-action="Index" class="btn btn-secondary">목록</a>
</div>
